<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http//schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.m00061016.about.MainActivity"
    android:layout_margin="10dp">

    <!-- Libreria vista en un tutorial para redondear una imagen -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_perfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fotoperfil"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Ing. Inform치tica"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Carlos Maga침a "
        android:layout_below="@+id/foto_perfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by: Carlos Maga침a"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/foto_perfil"
        android:textStyle="bold"
        android:layout_marginLeft="-15dp"
        />

        <TextView
            android:id="@+id/insta_username"
            android:layout_below="@id/name"
            android:layout_alignLeft="@+id/foto_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cmagana6"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="-50dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/insta_logo"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/iconoinstagram"
            android:layout_toLeftOf="@id/insta_username"
            android:layout_below="@id/name"
            android:layout_marginTop="40dp"
            android:layout_marginRight="60dp"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fb_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fb"
            android:layout_toRightOf="@+id/insta_username"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/name"
            />

        <TextView
            android:id="@+id/fb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carlos Maga침a"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_toRightOf="@id/fb_logo"
            android:layout_marginTop="46dp"
            android:layout_below="@id/name"
            android:layout_marginLeft="10dp"
            />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/phone_logo"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/phone"
        android:layout_below="@+id/insta_username"
        android:layout_alignLeft="@id/fb_logo"
        android:layout_marginTop="25dp"
        />

        <TextView
            android:gravity="center"
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/phone_logo"
            android:layout_below="@+id/fb_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="+50376813421"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_github"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/githublogo"
            android:layout_below="@id/insta_logo"
            android:layout_alignLeft="@id/insta_logo"
            android:layout_marginTop="20dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cmagana6"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_toRightOf="@id/logo_github"
                android:layout_below="@id/insta_logo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gmail_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/gmail"
            android:layout_alignLeft="@id/insta_logo"
            android:layout_below="@id/phone_logo"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            />

         <TextView
             android:id="@+id/correo_gmail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#000"
             android:textStyle="bold"
             android:text="carlos.magana10@gmail.com"
             android:layout_alignLeft="@id/insta_username"
             android:layout_below="@id/phone_logo"
             android:layout_marginTop="30dp"
             android:layout_marginLeft="30dp"
             />

</RelativeLayout>
